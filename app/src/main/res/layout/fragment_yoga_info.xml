<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.YogaInfoFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/asana_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yoga_asana_name"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_bold"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_margin="20dp"/>

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/asana_gif"
            android:layout_width="390dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:src="@drawable/basic"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp">
                <TextView
                    android:id="@+id/asanas_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/para"
                    android:layout_margin="15dp"/>
        </ScrollView>
        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/asana_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:videoId="g7Uhp5tphAs"
            app:autoPlay="false"
            app:showFullScreenButton="true"/>
    </LinearLayout>
</ScrollView>